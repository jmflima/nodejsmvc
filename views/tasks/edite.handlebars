<h1>Tarefa: {{retorno.title}}</h1>
<form action="/tasks/update" method="POST">
<input type="hidden" name="id" value="{{retorno.id}}">
<div class="form-control">
    <label for="title">Titulo</label>
    <input type="text" name="title" value="{{retorno.title}}">
</div>
<div class="form-control">
    <label for="description">Descrição</label>
    <textarea type="text" name="description">{{retorno.description}}</textarea>
</div>
<div class="form-control">
    {{#if retorno.done}}
        <label for="tarefa">Tarefa: Concluída</label>
    {{else}}
        <label for="tarefa">Tarefa: Não Concluída</label>
    {{/if}}
</div>
<input type="submit" value="Editar">
</form>