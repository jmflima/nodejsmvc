        <p><strong>Descrição:</strong> {{retorno.description}}</p>
        {{#if retorno.done}}
            <p><strong>Status:</strong> Tarefa realizada</p>
        {{else}}
            <p><strong>Status:</strong> Tarefa NÃO realizada</p>
        {{/if}}
</div>
